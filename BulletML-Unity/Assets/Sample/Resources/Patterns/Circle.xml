<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "bulletml.dtd">
<bulletml>
  <action label="top">
    <repeat>
      <times>0</times>
      <action>
        <repeat>
          <times>10</times>
          <action>
            <fire>
            <bullet>
              <direction type="sequence">82</direction>
              <speed type="absolute">15</speed>
              <sprite>2</sprite>
              <color>
                <red>0.78</red>
                <green>0</green>
                <blue>0</blue>
              </color>
              <action>
                <changeSpeed>
                  <speed>0</speed>
                  <term>50</term>
                </changeSpeed>
                <wait>500</wait>
                <changeSpeed>
                  <speed>1</speed>
                  <term>0</term>
                </changeSpeed>
                <changeDirection>
                  <direction type="relative">-30 + $rand * 60</direction>
                  <term>0</term>
                </changeDirection>
              </action>
            </bullet>
            </fire>
            <wait>0</wait>
          </action>
        </repeat>
        <wait>2</wait>
      </action>
    </repeat>
  </action>
</bulletml>