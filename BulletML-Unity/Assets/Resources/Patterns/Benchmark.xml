<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "bulletml.dtd">
<bulletml>
  <action label="top">
    <repeat>
      <times>10000</times>
      <action>
        <fire>
          <bullet>
            <direction type="absolute">$rand * 360</direction>
            <speed type="absolute">0.001 + $rand * 0.1</speed>
            <action>
              <changeSpeed>
                <speed>0</speed>
                <term>10000</term>
              </changeSpeed>
            </action>
          </bullet>
        </fire>
        <wait>1</wait>
      </action>
    </repeat>
  </action>
</bulletml>